<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/games/new.css" />
<%- include('../partials/nav') %>

<main>
  <h1>Players</h1>
  <p>
    Only add players not listed
    <section id="box">
      <% players.forEach(player => { %>
        <li id="player" ><%= player.player %></li>
      <% }) %>
      </section>
  </p>
  <form id="add-player-form" action="/players" method="POST">
    <label for="player-input">Player Name:</label>
    <input type="text" name="player" id="player-input">
    <button type="submit">Add Player</button>
  </form>
</main>
  
  <%- include('../partials/footer') %>