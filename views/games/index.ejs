<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/games/index.css" />
<%- include('../partials/nav') %>

<main>
  <h1>Game List</h1>
  <table>
    <thead>
      <tr>
        <th>Game</th>
        <th>Date</th>
        <th>Game Details</th>
      </tr>
    </thead>
    <tbody>
      <% games.forEach(game => { %>
        <tr>
          <td><%= game.title %></td>
          <td><%= game.date.toLocaleDateString() %></td>
          <td><a id="link" href="/games/<%= game._id %>">Display Details</a></td>
          <td>
            <% if (game.creator.equals(user?.profile._id)) { %>
            <form 
              action="/games/<%= game._id %>?_method=DELETE"
              method="POST"
            >
              <button>Delete Game</button>
            </form>
            <% } %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</main>
  
  <%- include('../partials/footer') %>